#!/usr/bin/env bash

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

chown -R $WWWUSER:$WWWUSER storage bootstrap/cache
chmod -R ug+rwx storage bootstrap/cache

if [ $# -gt 0 ];then
    exec gosu $WWWUSER "$@"
else
    supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
